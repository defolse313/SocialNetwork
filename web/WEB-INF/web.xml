<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>hieudn.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>hieudn.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>hieudn.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>hieudn.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>hieudn.controllers.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertEmoController</servlet-name>
        <servlet-class>hieudn.controllers.InsertEmoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyController</servlet-name>
        <servlet-class>hieudn.controllers.VerifyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckMailController</servlet-name>
        <servlet-class>hieudn.controllers.CheckMailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostArtController</servlet-name>
        <servlet-class>hieudn.controllers.PostArtController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostDeleteController</servlet-name>
        <servlet-class>hieudn.controllers.PostDeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentController</servlet-name>
        <servlet-class>hieudn.controllers.CommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCmtController</servlet-name>
        <servlet-class>hieudn.controllers.DeleteCmtController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertEmoController</servlet-name>
        <url-pattern>/InsertEmoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyController</servlet-name>
        <url-pattern>/VerifyController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckMailController</servlet-name>
        <url-pattern>/CheckMailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostArtController</servlet-name>
        <url-pattern>/PostArtController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostDeleteController</servlet-name>
        <url-pattern>/PostDeleteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentController</servlet-name>
        <url-pattern>/CommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCmtController</servlet-name>
        <url-pattern>/DeleteCmtController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
